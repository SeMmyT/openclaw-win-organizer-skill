#!/bin/bash
# klow-shutdown-cancel - Cancel pending shutdown
source /home/klowalski/bin/klow-common.sh
klow_init "klow-shutdown-cancel" "$@"

/mnt/c/Windows/System32/shutdown.exe /a 2>/dev/null

if [[ $? -eq 0 ]]; then
    echo "Shutdown cancelled"
    klow_log_action "shutdown-cancel" "success"
else
    echo "No shutdown to cancel (or already executed)"
    klow_log_action "shutdown-cancel" "none_pending"
fi
